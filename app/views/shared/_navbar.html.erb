<div class="navbar navbar-expand-sm navbar-dark navbar-lewagon">
  <%= link_to root_path do %>
    <h2>Hey!Neighbour</h2>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% unless @hidden_navbar %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My jobs", jobs_path(my_jobs: true), class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <img src= <%= choose_avatar(current_user) %> class="card-job-user avatar-bordered">
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <% unless @hidden_navbar %>
          <li class="nav-item active">
            <%= link_to "Home", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Look for a job", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Offer a job", "#", class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
