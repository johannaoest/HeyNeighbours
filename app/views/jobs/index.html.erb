

<h1>Jobs</h1>

<table>
  <thread>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thread>
</table>

<tbody>
  <% @jobs.each do |job| %>
  <%= job.title %>
  <%= job.details %>
  <%= job.price %>

    <% if policy(job).edit? %>
      <td><%= link_to 'Edit',edit_job_path(job) %></td>
    <% end %>
    <% if policy(job).destroy? %>
      <td><%= link_to 'Destroy',job, method: :delete, data: { confirm: 'Are you sure you want to delete this?'} %></td>
    <% end %>
  <% end %>
</tbody>

<% if policy(Job).new? %>
  <% link_to 'New Job', new_job_path %>
<% end %>
