
<div class="container">
  <div class="row">
    <% @jobs.each do |job| %>
      <div class="col">
        <div class="card-trip">
          <div class="card-photo">
            <% if job.photo.attached? %>
              <%= cl_image_tag job.photo.key %>
            <% else%>
              <%= image_tag 'random.jpg' %>
            <% end %>
          </div>
          <div class="card-trip-infos">
            <div class="card-title">
              <h2><%= job.title %></h2>
            </div>

            <div>
              <div class="date-info">
                <h2><%= job.date %></h2>

              </div>

              <div class="loc-info">
                <h2><%= job.location %></h2>
 
              </div>

              <div class="price-info">
                <h2 class="card-trip-pricing"><%= job.price %> â‚¬</h2>
              </div>
            </div>

            <% if job.user.avatar.attached? %>
              <%= cl_image_tag job.user.avatar.key, class:"card-trip-user avatar-bordered"%>
            <% else%>
              <%= image_tag 'profile.png', class:"card-trip-user avatar-bordered"%>
            <% end %>
          </div>
        </div>
      </div>
      <% if policy(job).edit? %>
        <%= link_to 'Edit',edit_job_path(job) %>
      <% end %>
      <% if policy(job).destroy? %>
        <%= link_to 'Destroy',job, method: :delete, data: { confirm: 'Are you sure you want to delete this?'} %>
      <% end %>
    <% end %>
  </div>
</div>








<% if policy(Job).new? %>
  <% link_to 'New Job', new_job_path %>
<% end %>

