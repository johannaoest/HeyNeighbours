
<div class="container">
  <div class="row">
    <% @jobs.each do |job| %>
      <div class="card-trip col">
        <% if job.photo.attached? %>
          <%= cl_image_tag job.photo.key %>
        <% else%>
          <%= image_tag 'random.jpg' %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= job.title %></h2>
            <p> <%= job.details %></p>
          </div>
          <h2 class="card-trip-pricing"><%= job.price %></h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>
    <% end %>
  </div>
</div>