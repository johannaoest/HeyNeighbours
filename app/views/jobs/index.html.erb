<div class="container">
  <div class="row">
    <% @jobs.each do |job| %>
      <div class="card-trip col">
        <% if job.photo.attached? %>
          <%= cl_image_tag job.photo.key %>
        <% else%>
          <%= image_tag 'random.jpg' %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= job.title %></h2>
            <p> <%= job.details %></p>
          </div>
          <h2 class="card-trip-pricing"><%= job.price %></h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>
      <% if policy(job).edit? %>
        <%= link_to 'Edit',edit_job_path(job) %>
      <% end %>
      <% if policy(job).destroy? %>
        <%= link_to 'Destroy',job, method: :delete, data: { confirm: 'Are you sure you want to delete this?'} %>
      <% end %>
    <% end %>
  </div>
</div>








<% if policy(Job).new? %>
  <% link_to 'New Job', new_job_path %>
<% end %>

