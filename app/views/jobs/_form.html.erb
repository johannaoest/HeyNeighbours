  <%= simple_form_for(job) do |f| %>

        <%= f.input :title, label: 'Your job title' %>
        <%= f.input :details, as: :text, label: 'Job details', placeholder: 'All the important details about job you are offering.' %>
        <%= f.input :location, label: 'Job location' %>
        <div class="form-inline">
          <%= f.input :category, :collection=>Job.category, value: :name, include_blank: false, include_hidden: false, wrapper_html: { class: 'inline-element' } %>
          <%= f.input :price, placeholder: 'euros', label: 'Earnings', wrapper_html: { class: 'inline-element' } %>
        </div>
        <div class="form-inline">
          <%= f.input :date, as: :date, html5: true, wrapper_html: { class: 'inline-element' } %>
          <%= f.input :duration, placeholder: 'hours', wrapper_html: { class: 'inline-element' } %>
        </div>
        <%= f.input :photo, as: :file %>

      <%= f.submit 'Offer your job', class:'btn-orange' %>
  <% end %>
  <div class="link">
    <%= link_to "Back", :back %>
  </div>
