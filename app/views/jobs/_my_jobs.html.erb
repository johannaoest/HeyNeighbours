<div class="background-container">
    <div class="title">
        <h2>Jobs posted by me</h2>
    </div>
    <% if @jobs.empty? %>
      <div class="content-container">
        <div class="no-job">
            <h2>You haven't posted a job yet!</h2>
        </div>
      </div>
    <% else %>
        <% @jobs.each do |job| %>
            <div class="card-job-done">
                <div class="img-done-container">
                    <%= image_tag choose_image(job), class: "img-job-done" %>
                </div>
                <div class="job-done-info">
                    <div class="job-title">
                        <h2><%= job.title %></h2>
                        <p><%= job.details %></p>
                    </div>
                    <table style="width: 100%", border=1 frame="BELOW" rules="NONE">
                        <thead>
                            <tr>
                            <th>Date</th>
                            <th>Duration</th>
                            <th>Earning</th>
                            <th>Location</th>
                            <th colspan="6"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= job.date %></td>
                                <td><%= job.duration %></td>
                                <td><%= job.price %> euros</td>
                                <td><%= job.location %></td>
                                <td><%= job.category %></td>

                            </tr>
                        </tbody>
                    </table>
                </div>            
                <div class="job-done-actions">
                    <div class="inline-buttons">
                        <div class="button">
                            <%= link_to 'Edit',edit_job_path(job), class:"btn-orange" %>
                        </div>
                        <div class="button">
                            <%= link_to 'Delete',job, method: :delete, data: { confirm: 'Are you sure you want to delete this?'}, class:"btn-orange" %>
                        </div>
                    </div>
                    <div class="button">
                        <%= link_to 'Applicants', applyments_index_path(job), class:"btn-orange" %>
                    </div>
                </div>
            </div>
        <% end %>
    <% end %>
</div>
